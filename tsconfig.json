{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,

    "noUnusedParameters": false,
    "noUnusedLocals": false,

    "skipLibCheck": true, // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/14324

    "jsx": "react",
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ]
}