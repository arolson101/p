{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,

    "noUnusedParameters": false,
    "noUnusedLocals": false,

    "skipLibCheck": true, // https://github.com/DefinitelyTyped/DefinitelyTyped/issues/14324

    "jsx": "react",
    "target": "es2017",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,

    "lib": [
      "es2015",
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}