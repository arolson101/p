{
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,

    "noUnusedParameters": false,
    "noUnusedLocals": false, // https://github.com/Microsoft/TypeScript/issues/11324

    "jsx": "react",
    "target": "es2017",
    // "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,

    "baseUrl": "src",

    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
